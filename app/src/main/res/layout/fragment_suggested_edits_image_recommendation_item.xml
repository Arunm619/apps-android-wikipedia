<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/suggestedEditsItemRootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="4dp">

    <ProgressBar
        android:id="@+id/cardItemProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="64dp" />

    <org.wikipedia.views.WikiErrorView
        android:id="@+id/cardItemErrorView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:visibility="gone" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/contentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:id="@+id/instructionTick"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/ic_triangle_back"
                android:backgroundTint="?attr/chip_background_color"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/instructionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="@id/instructionTick"
                android:layout_marginStart="17dp"
                android:background="?attr/chip_background_color"
                android:padding="10dp"
                android:text="Is this a good image for the article below?"/>

            <!-- Container layout is necessary to make the ImageView zoomable in-place. -->
            <FrameLayout
                android:id="@+id/imageContainer"
                android:layout_width="0dp"
                android:layout_height="220dp"
                app:layout_constraintTop_toBottomOf="@id/instructionText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="12dp"
                android:layout_marginStart="48dp"
                android:layout_marginEnd="8dp">
                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:contentDescription="@null"/>
            </FrameLayout>

            <org.wikipedia.views.GoneIfEmptyTextView
                android:id="@+id/imageCaptionText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@id/imageContainer"
                app:layout_constraintStart_toStartOf="@id/imageContainer"
                app:layout_constraintEnd_toEndOf="@id/imageContainer"
                android:padding="4dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:lineSpacingMultiplier="1.1"
                android:background="@color/black54"
                android:textColor="@android:color/white"
                android:textColorLink="@android:color/white"
                android:textSize="12sp"
                android:textStyle="italic"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/acceptButton"
                style="@style/FlatButton.Small"
                app:layout_constraintTop_toBottomOf="@id/imageContainer"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/image_recommendations_task_accept"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                app:icon="@drawable/ic_baseline_thumb_up_24"
                app:iconSize="20dp"
                app:iconPadding="8dp"
                app:iconTint="?attr/colorAccent"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/rejectButton"
                style="@style/FlatButton.Small"
                app:layout_constraintTop_toBottomOf="@id/imageContainer"
                app:layout_constraintEnd_toStartOf="@id/acceptButton"
                android:text="@string/image_recommendations_task_reject"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                app:icon="@drawable/ic_baseline_thumb_down_24"
                app:iconSize="20dp"
                app:iconPadding="8dp"
                app:iconTint="?attr/colorAccent"/>

            <TextView
                android:id="@+id/articleTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/acceptButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:ellipsize="end"
                android:fontFamily="serif"
                android:lineSpacingMultiplier="1.1"
                android:maxLines="3"
                android:textColor="?attr/primary_text_color"
                android:textSize="26sp" />

            <org.wikipedia.views.GoneIfEmptyTextView
                android:id="@+id/articleDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:layout_marginTop="12dp"
                android:lineSpacingMultiplier="1.1"
                android:textColor="?attr/secondary_text_color"
                android:textSize="13sp"
                app:layout_constraintTop_toBottomOf="@id/articleTitle"
                app:layout_constraintStart_toStartOf="@id/articleTitle"
                app:layout_constraintEnd_toEndOf="@id/articleTitle"/>

            <View
                android:id="@+id/articleDivider"
                android:layout_width="@dimen/divider_width_for_article"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="?attr/material_theme_border_color"
                app:layout_constraintStart_toStartOf="@id/articleTitle"
                app:layout_constraintTop_toBottomOf="@id/articleDescription"/>

            <TextView
                android:id="@+id/articleExtract"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lineSpacingMultiplier="1.3"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="8dp"
                android:textColor="?attr/primary_text_color"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/articleDivider"
                app:layout_constraintStart_toStartOf="@id/articleTitle"
                app:layout_constraintEnd_toEndOf="@id/articleTitle"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/publishOverlayContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        tools:visibility="visible">

        <ProgressBar
            android:id="@+id/publishProgressBar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center" />

        <ProgressBar
            android:id="@+id/publishProgressBarComplete"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="center"
            style="?android:attr/progressBarStyleHorizontal"
            android:indeterminate="false"
            android:max="100"
            android:secondaryProgress="100"
            android:progressDrawable="@drawable/circular_progress" />

        <ImageView
            android:id="@+id/publishProgressCheck"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_check_borderless"
            android:contentDescription="@null"/>

        <TextView
            android:id="@+id/publishProgressText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="38dp"
            android:textAllCaps="true"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.06"
            android:text="@string/image_recommendations_task_thanks"/>

    </FrameLayout>

</FrameLayout>